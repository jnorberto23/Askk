<%- include("partials/header.ejs") %>
<body>
    <%- include("partials/navbar.ejs")%>
    <div class="container">
        <div class="offset-md-3 col-md-6 col-xs-12" id="form-pergunta">
            <div class="card">
                <div class="card-header">Realizar pergunta</div>
                <div class="card-body">
                    <form method="POST" action="/salvarPergunta">
                        <div class="form-group">
                            <label for="titulo">Título</label>
                            <input type="text" name="titulo" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="descricao">Descrição</label>
                            <textarea type="text" name="descricao" placeholder="Descreva sua pergunta aqui"
                                class="form-control"></textarea>
                        </div>
                        <button class="btn btn-success">Perguntar </button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</body>

